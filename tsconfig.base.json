{
  "compileOnSave": false,
  "compilerOptions": {
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mtlport/design-system": ["libs/design-system/src/index.ts"],
      "@mtlport/react-lib": ["libs/react-lib/src/index.ts"],
      "@mtlport/schema": ["libs/schema/src/index.ts"],
      "@mtlport/typescript-lib": ["libs/typescript-lib/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
